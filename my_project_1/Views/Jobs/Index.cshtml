@model IEnumerable<my_project_1.Models.Job>

@{
    ViewBag.Title = "الرئيسية";
    Layout = "~/Views/_main_LayoutPage1.cshtml";
}

<h2>الرئيسية</h2>

<p>
    @Html.ActionLink("انشاء الأن", "Create")
</p>
<table class="table table-stripped table-hover table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.category.categoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Jobtital)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Jobcontent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.intJobimage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.category.categoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Jobtital)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Jobcontent)
        </td>
        <td>
           <img  src="~/uploads/@Html.DisplayFor(model=>item.intJobimage)"
                class="thumbnail" style="width:48px;height:48px"/>
        </td>
        <td>
            @Html.ActionLink("تعديل", "Edit", new { id=item.Id }) |
            @Html.ActionLink("تفاصيل", "Details", new { id=item.Id }) |
            @Html.ActionLink("حذف", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
